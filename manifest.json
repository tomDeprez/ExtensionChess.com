{
  "manifest_version": 3,
  "name": "Chess.com Helper",
  "version": "1.0",
  "description": "Assistant d'analyse pour Chess.com",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.chess.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": [
        "chess.js",
        "stockfish.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["*://*.chess.com/*"]
    }
  ]
} 